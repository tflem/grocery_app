<% provide(:title, "New Grocery Item") %>
<h2>Add New Grocery Item</h2>

<div class="row">
  <div class="form-group col-md-6 col-md-offset-3">
    <%= form_for(@item, url: groceries_path) do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :item %>
      <%= f.text_field :item, class: "form-control" %>

      <%= f.label :quantity %>
      <%= f.number_field :quantity, class: "form-control" %>


      <%= f.submit "Add New Grocery Item", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
