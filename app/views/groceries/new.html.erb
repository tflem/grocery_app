<% provide(:title, 'New Grocery Item') %>
<h1>New Grocery Item</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@item, url: groceries_path) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :item %>
      <%= f.text_field :item, class: "item-field" %>

      <%= f.label :quantity %>
      <%= f.number_field :quantity, class: "quantity-field" %>

      <%= f.submit "Add Grocery Item", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
