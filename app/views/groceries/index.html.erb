<% provide(:title, "Your Grocery List")%>
<h2>Your Grocery List</h2>

<%= will_paginate @groceries, list_classes: %w(pagination justify-content-center) %>

<div class="container">
  <%= link_to "Add Another Item", new_grocery_path, class: "ion-plus-round btn btn-dark" %>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-dark">
        <caption>List of Grocery Items</caption>
        <thead class="thead-dark">
          <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Actions</th>
          </tr>

        <% @groceries.each do |item| %>
          <tr>
            <td class="grocery-items align-middle"><%= item.item.titleize %></td>
            <td class="grocery-quantities align-middle"><%= item.quantity %></td>
            <td><%= link_to "Edit", edit_grocery_path(item),
                    class: "btn btn-secondary btn-xs ion-compose" %>                    
            <%= link_to "Delete", grocery_path(item),
                    method: :delete,
                    class: "btn btn-secondary btn-xs ion-trash-b" %></td>                   
          </tr>
        <% end %>
    </table>
  </div>
 </div>
</div>

<%= will_paginate @groceries, list_classes: %w(pagination justify-content-center) %>
