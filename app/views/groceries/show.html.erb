<% provide(:title, "Your Item Summary")%>
<h2>Grocery Item Summary</h2>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-dark">
        <thead class="thead-dark">
          <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Actions</th>
          </tr>
        </thead>
       <tbody>
        <td class="grocery-items align-middle"><%= @item.item.titleize %></td>
         <td class="grocery-quantities align-middle"><%= @item.quantity %></td>
         <td><%= link_to "Edit", edit_grocery_path(@item),
                 class: "btn btn-secondary btn-large ion-compose" %>
         <%= link_to "Add More", new_grocery_path,
             class: "btn btn-secondary btn-large ion-plus-round" %></td>
       </tbody>
     </table>
   </div>
 </div>
</div>
